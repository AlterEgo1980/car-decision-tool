    <script>
        const ctx = document.getElementById('myChart').getContext('2d');
        let chart;

        function update() {
            const P = Number(document.getElementById('price').value);
            const r = Number(document.getElementById('interest').value) / 100;
            const M = Number(document.getElementById('leaseMonthly').value);
            const D = Number(document.getElementById('downPayment').value);
            const years = 3;
            const taxiMonthly = 2139;

            document.getElementById('priceVal').innerText = P.toLocaleString();
            document.getElementById('intVal').innerText = (r*100).toFixed(1);
            document.getElementById('leaseVal').innerText = M.toLocaleString();
            document.getElementById('downVal').innerText = D.toLocaleString();

            // ×¨×›×™×©×”
            const depreciation = P * 0.40;
            const maintenance = (5500 + 2000 + 2400) * years;
            const lostOppPurchase = P * (Math.pow(1 + r, years) - 1);
            const totalPurchase = depreciation + maintenance + lostOppPurchase;

            // ×œ×™×¡×™× ×’
            const totalLease = (M * 12 * years) + D + (5500 + 2400) * years + (D * (Math.pow(1 + r, years) - 1));

            // ××•× ×™×•×ª
            const totalTaxi = taxiMonthly * 12 * years;

            const dataValues = [
                Math.round(totalPurchase / (12 * years)),
                Math.round(totalLease / (12 * years)),
                Math.round(totalTaxi / (12 * years))
            ];

            if (chart) chart.destroy();
            chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['×¨×›×™×©×”', '×œ×™×¡×™× ×’', '××•× ×™×•×ª'],
                    datasets: [{
                        data: dataValues,
                        backgroundColor: ['#3b82f6', '#8b5cf6', '#10b981'],
                        borderRadius: 12,
                        barThickness: 40
                    }]
                },
                options: { 
                    responsive: true, 
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true, grid: { display: false } }, x: { grid: { display: false } } }
                }
            });

            const gap = dataValues[1] - dataValues[0];

            document.getElementById('results').innerHTML = `
                <div class="p-3 bg-blue-50 rounded-xl text-center border border-blue-100 shadow-sm">
                    <span class="block text-[10px] font-bold text-blue-600 uppercase">×—×•×“×©×™ - ×¨×›×™×©×”</span>
                    <span class="text-lg font-black text-blue-900">â‚ª${dataValues[0].toLocaleString()}</span>
                </div>
                <div class="p-3 bg-purple-50 rounded-xl text-center border border-purple-100 shadow-sm">
                    <span class="block text-[10px] font-bold text-purple-600 uppercase">×—×•×“×©×™ - ×œ×™×¡×™× ×’</span>
                    <span class="text-lg font-black text-purple-900">â‚ª${dataValues[1].toLocaleString()}</span>
                </div>
                <div class="p-3 bg-slate-900 rounded-xl text-center shadow-lg border border-slate-700">
                    <span class="block text-[10px] font-bold text-slate-400 uppercase">×”×¤×¨×©/× ×•×—×•×ª</span>
                    <span class="text-lg font-black text-white">â‚ª${gap.toLocaleString()}</span>
                </div>
            `;
        }

        document.querySelectorAll('input').forEach(i => i.addEventListener('input', update));
        update();
    </script>
